<div class="container mt-4">
  <h2>Shopping Cart</h2>
  {{#if cart.length}}
    <ul class="list-group">
      {{#each cart}}
        <li class="list-group-item">{{this}}</li>
      {{/each}}
    </ul>
    <form action="/clear-cart" method="post" class="mt-3">
      <button type="submit" class="btn btn-danger">Clear Cart</button>
    </form>
  {{else}}
    <p>No items in cart.</p>
  {{/if}}
</div>
